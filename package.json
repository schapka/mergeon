{
  "name": "mergeon",
  "version": "0.2.12",
  "description": "Loading extendable JSON structures",
  "keywords": ["json", "merge", "data", "extend"],
  "author": "Ren√© Schapka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/schapka/mergeon.git"
  },
  "main": "dist/mergeon.js",
  "bin": "dist/cli.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build":
      "microbundle build --compress false --format cjs src/mergeon.js src/cli.js",
    "pretest": "npm run -s build",
    "test": "node scripts/tasks/test.js",
    "release":
      "npm run -s test && git commit -am \"v$npm_package_version\" && git tag \"v$npm_package_version\" && git push origin master && git push origin master --tags"
  },
  "files": ["dist"],
  "devDependencies": {
    "assert": "^1.4.1",
    "glob": "^7.1.2",
    "microbundle": "~0.2.4",
    "rimraf": "~2.6.2"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "lodash": "^4.17.4",
    "yargs": "^10.0.3"
  }
}
